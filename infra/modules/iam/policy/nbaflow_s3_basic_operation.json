{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "S3Permissions",
            "Effect": "Allow",
            "Action": [
                "s3:PutObject",
                "s3:GetObject",
                "s3:ListAllMyBuckets",
                "s3:PutObjectVersionTagging",
                "s3:ListBucket",
                "s3:DeleteObject"
            ],
            "Resource": "*",
            "Condition": {
				"StringEqualsIfExists": {
					"aws:ResourceTag/project": "${project_tag_identifier}"
				}
			}
        }
    ]
}